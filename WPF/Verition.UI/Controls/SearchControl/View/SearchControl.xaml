    <StackPanel>
        <view:SearchControlBase x:Name="ViewSearchPanel"
                                 Width="200" 
                                 PopupMinHeight="300"
                                 IsTextEditable="True"
                                 NullText="Search Here"
                                 EditValueChanged="SearchControlBase_EditValueChanged"
                                 EditValuePostDelay="500"  
                                 ShowEditorButtons="false"
                                
            
