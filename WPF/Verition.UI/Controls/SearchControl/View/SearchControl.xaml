        <helper:SearchControlItemTemplateSelector x:Key="SearchControlItemTemplateSelector">
            <helper:SearchControlItemTemplateSelector.RootTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Grid   >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <dx:DXImage HorizontalAlignment="Left" Grid.Column="0" Source="/Shell;component/Images/General/CheckBox.svg"  Height="20" Width="20"/>
                        <TextBlock Text="{Binding Header}" Grid.Column="1"/>
                        <dx:DXImage   Grid.Column="2" Source="/Shell;component/Images/General/CheckBox.svg"  Height="20" Width="20"/>
                    </Grid>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.RootTemplate>
            <helper:SearchControlItemTemplateSelector.ViewsHeaderTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Border/>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.ViewsHeaderTemplate>
            <helper:SearchControlItemTemplateSelector.SeperatorTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Border  BorderThickness="2" HorizontalAlignment="Stretch" BorderBrush="Gray"/>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.SeperatorTemplate>
            <helper:SearchControlItemTemplateSelector.MRUHeaderTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Border  BorderThickness="2" HorizontalAlignment="Stretch" BorderBrush="Gray"/>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.MRUHeaderTemplate>
            <helper:SearchControlItemTemplateSelector.FAVSHeaderTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Border/>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.FAVSHeaderTemplate>
            <helper:SearchControlItemTemplateSelector.SubTemplate>
                <DataTemplate DataType="{x:Type model:MenuItem}">
                    <Grid   >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <dx:DXImage HorizontalAlignment="Left" Grid.Column="0" Source="/Shell;component/Images/General/Panel.svg"  Height="20" Width="20"/>
                        <TextBlock Text="{Binding Header}" Grid.Column="1"/>
                        <ToggleButton Grid.Column="2"   Width="22" Height="22"  
                                      Command="{Binding  DataContext.FavouriteClickedCommand,  Source={StaticResource Proxy}}" 
                                      CommandParameter="{Binding}"
                                      IsChecked="{Binding IsFavourite}"
                                      >
                                        
                            <ToggleButton.Template>
                                <ControlTemplate TargetType="{x:Type ToggleButton}">
                                    <Grid Background="Transparent">
                                        <dx:DXImage  x:Name="FavIcon"  Visibility="Collapsed" Source="/Shell;component/Images/General/Favourite.svg"  Height="20" Width="20"/>
                                        <dx:DXImage  x:Name="UnFavIcon" Visibility="Visible"   Source="/Shell;component/Images/General/UnFavourite.svg"  Height="20" Width="20"/>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsChecked" Value="True">
                                            <Setter Property="Visibility" TargetName="FavIcon" Value="Visible"/>
                                            <Setter Property="Visibility" TargetName="UnFavIcon" Value="Collapsed"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </ToggleButton.Template>
                        </ToggleButton>
                        <!--<dx:DXImage   Grid.Column="2" Source="/Shell;component/Images/General/Favourite.svg"  Height="20" Width="20"/>-->
                    </Grid>
                </DataTemplate>
            </helper:SearchControlItemTemplateSelector.SubTemplate>
        </helper:SearchControlItemTemplateSelector>
       
    
    
