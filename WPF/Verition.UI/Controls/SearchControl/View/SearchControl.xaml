            <view:SearchControlBase.PopupContentTemplate>
                <ControlTemplate>
                    <StackPanel Orientation="Horizontal">
                        <dxa:AccordionControl x:Name="PART_SearchContent"
                                              Width="400"           
                                              
                                              ChildrenPath="MenuItems" 
                                              IsCollapseButtonVisible="False"                                              
                                              AutoExpandAllItems="True"
                                              ExpandItemOnHeaderClick="False"
                                              CollapsedItemClickAction="Select" 
                                              Margin="0,0,1,0"
                                              ShowSearchControl="False"
                                              ViewMode="NavigationPane" 
                                              RootItemExpandButtonPosition="None"
                                              SubItemExpandButtonPosition="None"
                                              
                                                
                         >
                            <dxa:AccordionItem Header="View" 
                                               IsSelected="true"   
                                               IsExpanded="true"
                                               ItemsSource="{Binding Items}" 
                                               GlyphSize="20,20" 
                                               Glyph="/Shell;component/Images/General/Panel.svg"
                                                ItemTemplateSelector ="{StaticResource SearchControlItemTemplateSelector}"/>
                            <dxa:AccordionItem Header="Favs"
                                               GlyphSize="20,20" 
                                               Glyph="/Shell;component/Images/General/Favourite.svg"
                                               ItemsSource="{Binding FavItems}" 
                                               ItemTemplateSelector ="{StaticResource SearchControlItemTemplateSelector}"
                                               />
